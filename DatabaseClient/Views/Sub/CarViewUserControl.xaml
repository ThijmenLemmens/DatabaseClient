<UserControl x:Class="DatabaseClient.Views.Sub.CarViewUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseClient.Views.Sub"
             mc:Ignorable="d" 
             Height="250" Width="200">
    <StackPanel >

        <Image Source="{Binding }" Height="100" Width="100"></Image>

        <TextBox Text="{Binding Car.Name}" FontSize="24" FontWeight="SemiBold" />

    </StackPanel>
</UserControl>
