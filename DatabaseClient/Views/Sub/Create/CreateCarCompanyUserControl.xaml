<UserControl x:Class="DatabaseClient.Views.Sub.Create.CreateCarCompanyUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DatabaseClient.Views.Sub.Create"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="280">
    <Border Background="#FFE5E5E5" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <!-- Headquarters -->
                <RowDefinition Height="Auto"/>
                <!-- Name -->
                <RowDefinition Height="Auto"/>
                <!-- Logo -->
                <RowDefinition Height="Auto"/>
                <!-- Buttons -->
            </Grid.RowDefinitions>

            <!-- Headquarters Dropdown -->
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Headquarters:" VerticalAlignment="Center"/>
                <ComboBox Grid.Column="1" Height="30"
                          ItemsSource="{Binding Headquaters}"
                          SelectedItem="{Binding SelectedHeadquarter}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0}, {1}">
                                        <Binding Path="City"/>
                                        <Binding Path="Country"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </Grid>

            <!-- Name Field -->
            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Name:" VerticalAlignment="Center"/>
                <TextBox Grid.Column="1" Height="25" FontSize="14" Text="{Binding Name}"/>
            </Grid>

            <!-- Logo Field -->
            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Logo:" VerticalAlignment="Center"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBox Width="75" Text="{Binding LogoPath}" IsReadOnly="True"/>
                    <Button Content="Browse" Margin="5,0,0,0" Width="60" Command="{Binding BrowseCommand}"/>
                </StackPanel>
            </Grid>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Create" Width="100" Margin="10,0"
                        Command="{Binding CreateCommand}"/>
                <Button Content="Reset" Width="100" Margin="10,0"
                        Command="{Binding ResetCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
